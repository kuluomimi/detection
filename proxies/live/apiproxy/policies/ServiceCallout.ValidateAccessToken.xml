<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout async="false" continueOnError="true" enabled="true" name="ServiceCallout.ValidateAccessToken">
    <DisplayName>ServiceCallout.ValidateAccessToken</DisplayName>
    <Properties/>
    <Request clearPayload="true" variable="tokenValidationRequest">
        <IgnoreUnresolvedVariables>false</IgnoreUnresolvedVariables>
        <Set>
            <Headers>
                <Header name="GPC-Authorization">{request.header.GPC-Authorization}</Header>
            </Headers>
            <Verb>POST</Verb>
        </Set>
    </Request>
    <Response>tokenValidationResponse</Response>
    <HTTPTargetConnection>
        <URL>https://{endpoint_no_protocol}/validate</URL>
        <Properties>
            <Property name="supports.http10">true</Property>
            <Property name="request.retain.headers">User-Agent,Referer,Accept-Language,GPC-Authorization</Property>
        </Properties>
    </HTTPTargetConnection>
    <Timeout>300</Timeout>
</ServiceCallout>
