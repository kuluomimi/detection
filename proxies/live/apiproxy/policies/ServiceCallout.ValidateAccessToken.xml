<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ServiceCallout async="false" continueOnError="false" enabled="true" name="ServiceCallout.ValidateAccessToken">
    <DisplayName>ServiceCallout.ValidateAccessToken</DisplayName>
    <Properties/>
    <Request clearPayload="true" variable="tokenValidationRequest">
        <IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
        <Set>
            <Verb>POST</Verb>
            <Headers>
                <Header name="Authorization">{authorization_access_token}</Header>
            </Headers>
        </Set>
    </Request>
    <Response>tokenValidationResponse</Response>
    <HTTPTargetConnection>
        <URL>https://{validation_endpoint}/validate</URL>
        <SSLInfo>
            <Enabled>true</Enabled>
        </SSLInfo>
    </HTTPTargetConnection>
    <Timeout>600</Timeout>
</ServiceCallout>
